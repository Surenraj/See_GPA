<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cgpa2">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate your CGPA:"
        android:textColor="#CE000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="42dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sem1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 1:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa1"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 1:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="35dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:text="0"
                        android:textColor="#CE000000"
                        android:textSize="20sp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="37dp"
                        android:layout_marginBottom="35dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 2:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa2"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 2:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="35dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:text="0"
                        android:textColor="#CE000000"
                        android:textSize="20sp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="37dp"
                        android:layout_marginBottom="35dp"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 3:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa3"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem4Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 4:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa4"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem5Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 5:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa5"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem6Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 6:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa6"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem7Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 7:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa7"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sem8Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 8:"
                        android:textColor="#CE000000"
                        android:textSize="18sp"
                        android:layout_margin="18dp"/>
                    <EditText
                        android:id="@+id/Edit_cgpa8"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="Enter GPA"
                        android:inputType="numberDecimal"
                        android:textFontWeight="3"
                        android:textColorHint="#000000"
                        android:layout_margin="22dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textCalculateCGPA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculated CGPA"
                    android:layout_marginStart="60dp"/>
                <Button
                    android:id="@+id/btn_cgpa"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Calculate"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="60dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>